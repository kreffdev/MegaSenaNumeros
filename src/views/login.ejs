<%- include('includes/head'); %>

<section class="login-container">
    <div class="login-wrapper">
        <div class="login-card">
            <div class="login-header">
                <h1 class="login-title">Mega Sena</h1>
                <p class="login-subtitle">Acesse sua conta</p>
            </div>

            <form action="/login" method="POST" class="login-form">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <div class="form-group">
                    <label for="username" class="form-label">Usuário</label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username" 
                        class="form-input"
                        placeholder="Digite seu usuário (mín. 4 caracteres)"
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Senha</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="form-input"
                        placeholder="Digite sua senha (mín. 4 caracteres)"
                        required
                    >
                </div>

                <button type="submit" class="login-btn">Entrar ou Criar Conta</button>
                
                <p class="login-info">Se a conta não existir, ela será criada automaticamente</p>
            </form>
        </div>
    </div>
</section>

<%- include('includes/footer'); %>
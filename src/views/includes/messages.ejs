<% if(errors && errors.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-danger">
        <% errors.forEach(error => { %>
          <p><%= error %></p>
        <% }); %>
      </div>
    </div>
  </div>
<% } %>

<% if(success && success.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-success">
        <% success.forEach(msg => { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    </div>
  </div>
<% } %>

